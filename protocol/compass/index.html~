<section>
  <h1>Compass</h1>
  <p>A device which senses horizontal orientation</p>
  <h2>Overview</h2>
  <table>
    <tbody>
      <tr>
        <td><strong>Device Type</strong></td>
        <td>compass</td>
      </tr>
      <tr>
        <td><strong>Data Type</strong></td>
        <td>1 Continuous Numerical</td>
      </tr>
      <tr>
        <td><strong>Data Format</strong></td>
        <td>float compass</td>
      </tr>
      <tr>
        <td><strong>Format Example</strong></td>
        <td>96.7629</td>
      </tr>
      <tr>
        <td><strong>Units</strong></td>
        <td>Degrees True (clockwise from true North)</td>
      </tr>
    </tbody>
  </table>
</section>
